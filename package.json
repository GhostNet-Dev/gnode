{
  "name": "my-app",
  "version": "1.0.0",
  "description": "Electron + Server + Web Boilerplate",
  "main": "dist/main/index.js",
  "scripts": {
    "build:electron": "tsc && webpack --config webpack.config.electron.js",
    "build:web": "tsc && webpack --config webpack.config.web.js",
    "build:renderer": "tsc && webpack --config webpack.config.renderer.js",
    "start:electron": "node dist/main/index.js",
    "start:web": "node dist/server/index.js"
  },
  "dependencies": {
    "chart.js": "^4.4.8",
    "classic-level": "^2.0.0",
    "electron": "^35.0.0",
    "level": "^9.0.0",
    "mime": "^4.0.6",
    "node-gyp-build": "^4.8.4",
    "peerjs": "^1.5.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "electron-builder": "^25.1.8",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
